{
    "version": 6,
    "configurePresets": [
        {
            "name": "windows-base",
            "displayName": "Windows Base Configuration",
            "description": "Base configuration for Windows builds",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "linux-base",
            "displayName": "Linux Base Configuration",
            "description": "Base configuration for Linux builds",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            }
        },
        {
            "name": "macos-base",
            "displayName": "macOS Base Configuration",
            "description": "Base configuration for macOS builds",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Darwin",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "10.14"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        },
        {
            "name": "android-base",
            "displayName": "Android Base Configuration",
            "description": "Base configuration for Android builds",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchains/android.cmake",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Android",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-21"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "arm64-android"
            }
        },
        {
            "name": "android-arm64",
            "displayName": "Android ARM64 Configuration",
            "description": "Android build for ARM64 devices",
            "inherits": "android-base",
            "cacheVariables": {
                "ANDROID_ABI": "arm64-v8a"
            }
        },
        {
            "name": "android-arm32",
            "displayName": "Android ARM32 Configuration",
            "description": "Android build for ARM32 devices",
            "inherits": "android-base",
            "cacheVariables": {
                "ANDROID_ABI": "armeabi-v7a"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "arm-android"
            }
        },
        {
            "name": "android-x64",
            "displayName": "Android x64 Configuration",
            "description": "Android build for x64 devices",
            "inherits": "android-base",
            "cacheVariables": {
                "ANDROID_ABI": "x86_64"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-android"
            }
        },
        {
            "name": "ios-base",
            "displayName": "iOS Base Configuration",
            "description": "Base configuration for iOS builds",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "toolchainFile": "${sourceDir}/cmake/toolchains/ios.cmake",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "12.0"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "arm64-ios"
            }
        },
        {
            "name": "ios-device",
            "displayName": "iOS Device Configuration",
            "description": "iOS build for physical devices",
            "inherits": "ios-base",
            "cacheVariables": {
                "IOS_PLATFORM": "OS"
            }
        },
        {
            "name": "ios-simulator",
            "displayName": "iOS Simulator Configuration",
            "description": "iOS build for simulator",
            "inherits": "ios-base",
            "cacheVariables": {
                "IOS_PLATFORM": "SIMULATOR"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-ios"
            }
        },
        {
            "name": "wasm-base",
            "displayName": "WebAssembly Base Configuration",
            "description": "Base configuration for WebAssembly builds",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchains/emscripten.cmake",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Emscripten",
                "CMAKE_CROSSCOMPILING": "TRUE"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "wasm32-emscripten"
            }
        },
        {
            "name": "wasm-web",
            "displayName": "WebAssembly Web Configuration",
            "description": "WebAssembly build for web browsers",
            "inherits": "wasm-base",
            "cacheVariables": {
                "WASM_TARGET": "web"
            }
        },
        {
            "name": "wasm-node",
            "displayName": "WebAssembly Node.js Configuration",
            "description": "WebAssembly build for Node.js",
            "inherits": "wasm-base",
            "cacheVariables": {
                "WASM_TARGET": "node"
            }
        },
        {
            "name": "embedded-arm-base",
            "displayName": "Embedded ARM Base Configuration",
            "description": "Base configuration for embedded ARM builds",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchains/arm-none-eabi.cmake",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Generic",
                "CMAKE_SYSTEM_PROCESSOR": "arm",
                "CMAKE_CROSSCOMPILING": "TRUE"
            }
        },
        {
            "name": "cortex-m4",
            "displayName": "ARM Cortex-M4 Configuration",
            "description": "Embedded build for ARM Cortex-M4",
            "inherits": "embedded-arm-base",
            "cacheVariables": {
                "ARM_TARGET": "cortex-m4",
                "ARM_FPU": "fpv4-sp-d16",
                "ARM_FLOAT_ABI": "hard"
            }
        },
        {
            "name": "cortex-m3",
            "displayName": "ARM Cortex-M3 Configuration",
            "description": "Embedded build for ARM Cortex-M3",
            "inherits": "embedded-arm-base",
            "cacheVariables": {
                "ARM_TARGET": "cortex-m3",
                "ARM_FLOAT_ABI": "soft"
            }
        },
        {
            "name": "cortex-m0",
            "displayName": "ARM Cortex-M0 Configuration",
            "description": "Embedded build for ARM Cortex-M0",
            "inherits": "embedded-arm-base",
            "cacheVariables": {
                "ARM_TARGET": "cortex-m0",
                "ARM_FLOAT_ABI": "soft"
            }
        },
        {
            "name": "msys2-base",
            "displayName": "MSYS2 Base Configuration",
            "description": "Base configuration for MSYS2 builds",
            "hidden": true,
            "condition": {
                "type": "notEquals",
                "lhs": "$env{MSYSTEM}",
                "rhs": ""
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic"
            }
        },
        {
            "name": "msys2-mingw64",
            "displayName": "MSYS2 MinGW64 Configuration",
            "description": "MSYS2 build with MinGW64 toolchain",
            "inherits": "msys2-base",
            "condition": {
                "type": "equals",
                "lhs": "$env{MSYSTEM}",
                "rhs": "MINGW64"
            }
        },
        {
            "name": "msys2-clang64",
            "displayName": "MSYS2 Clang64 Configuration",
            "description": "MSYS2 build with Clang64 toolchain",
            "inherits": "msys2-base",
            "condition": {
                "type": "equals",
                "lhs": "$env{MSYSTEM}",
                "rhs": "CLANG64"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "platform-build-base",
            "displayName": "Platform Build Base",
            "description": "Base build configuration for platform-specific builds",
            "hidden": true,
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "platform-test-base",
            "displayName": "Platform Test Base",
            "description": "Base test configuration for platform-specific tests",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}
